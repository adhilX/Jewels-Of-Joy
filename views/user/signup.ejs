<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ShutterCart - Sign Up</title>
  <link rel="icon" href="../assets/images/favicon.png" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      min-height: 100vh;
      display: flex;
      background-color: #ffffff;
    }

    .container {
      max-width: 1600px;
      width: 98%;
      margin: 1rem auto;
      display: flex;
      gap: 2.5rem;
      min-height: calc(100vh - 2rem);
      align-items: center;
      padding: 0;
    }

    .left-section {
      flex: 1.4;
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: relative;
      overflow: hidden;
      padding: 3rem;
      background-color: #000;
      border-radius: 30px;
      aspect-ratio: 1/1;
      max-width: 700px;
      height: 700px;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3),
                  0 10px 20px rgba(0, 0, 0, 0.2),
                  inset 0 0 50px rgba(0, 0, 0, 0.1);
      transform: translateZ(0);
      backface-visibility: hidden;
      margin-left:40px;
      margin-top: 20px;
    }

    .left-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.6) 0%,
        rgba(0, 0, 0, 0.3) 30%,
        rgba(0, 0, 0, 0.2) 100%
      );
      z-index: 1;
    }

    .right-section {
      flex: 1;
      max-width: 750px;
      height: 650px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 40px;
    }

    .login-card {
      background: #fff;
      padding: 1.5rem;
      border-radius: 30px;
      width: 100%;
      margin-left: 7%;
      max-width: 750px;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1),
                  0 10px 20px rgba(0, 0, 0, 0.05),
                  0 0 0 1px rgba(0, 0, 0, 0.02);
      transform: translateZ(0);
      backface-visibility: hidden;
 
    }

    .video-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      background: #000;
      border-radius: 30px;
    }

    .background-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 0;
    }

    .video-text-overlay {
      position: absolute;
      bottom: 10%;
      left: 50%;
      transform: translateX(-50%);
      z-index: 2;
      text-align: center;
      width: 100%;
      padding: 0 2rem;
      opacity: 0;
      animation: showOverlay 0.5s ease-out 3s forwards;
    }

    @keyframes showOverlay {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .video-text-overlay h1 {
      color: #ffffff;
      font-size: 3.2rem;
      font-weight: 700;
      line-height: 1.2;
      margin: 0;
      text-shadow: 2px 4px 8px rgba(0, 0, 0, 0.3);
      animation: fadeInUp 1.2s ease-out 3.2s forwards;
      opacity: 0;
      transform: translateY(30px);
      background: linear-gradient(45deg, #ffffff, #f0f0f0);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: 1px;
    }

    .video-text-overlay h1 span {
      display: block;
      font-size: 1.8rem;
      font-weight: 400;
      margin-top: 0.5rem;
      opacity: 0;
      animation: fadeIn 0.8s ease-out 4s forwards;
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .login-header {
      text-align: center;
      margin-bottom: 2rem;
      animation: slideDown 0.6s ease-out 0.2s both;
    }

    .login-header h2 {
      font-size: 1.75rem;
      color: #1A1A1A;
      margin-bottom: 0.5rem;
      font-weight: 600;
    }

    .login-header p {
      color: #666;
      font-size: 1rem;
    }

    .form-group {
      margin-bottom: 0.75rem;
    }

    .form-group:nth-child(1) { animation: slideDown 0.6s ease-out 0.4s both; }
    .form-group:nth-child(2) { animation: slideDown 0.6s ease-out 0.6s both; }
    .form-group:nth-child(3) { animation: slideDown 0.6s ease-out 0.8s both; }
    .form-group:nth-child(4) { animation: slideDown 0.6s ease-out 1s both; }
    .form-group:nth-child(5) { animation: slideDown 0.6s ease-out 1.2s both; }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #1A1A1A;
      font-size: 0.85rem;
      font-weight: 500;
    }

    .form-group input {
      width: 100%;
      padding: 0.65rem;
      border: 1.5px solid #E0E0E0;
      border-radius: 8px;
      font-size: 0.85rem;
      transition: all 0.3s ease;
      transform-origin: left;
      background: #fff;
    }

    .form-group input::placeholder {
      color: #999;
    }

    .form-group input:focus {
      outline: none;
      border-color: #1A1A1A;
      box-shadow: 0 0 0 2px rgba(26, 26, 26, 0.1);
      transform: scale(1.01);
    }

    .remember-me {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin: 1.5rem 0;
      animation: slideDown 0.6s ease-out 1.4s both;
    }

    .remember-me input[type="checkbox"] {
      width: 1.125rem;
      height: 1.125rem;
      border: 1.5px solid #E0E0E0;
      border-radius: 4px;
      cursor: pointer;
    }

    .remember-me label {
      color: #666;
      font-size: 0.9rem;
      cursor: pointer;
    }

    .remember-me label a {
      color: #1A1A1A;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .remember-me label a:hover {
      color: #333;
    }

    .btn-login {
      width: 100%;
      padding: 0.65rem;
      background: #1A1A1A;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 0.85rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      animation: slideDown 0.6s ease-out 1.6s both;
      position: relative;
    }
    
    .btn-login.loading {
      color: transparent !important;
      pointer-events: none;
    }
    
    .btn-login.loading::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border: 2px solid #ffffff;
      border-radius: 50%;
      border-right-color: transparent;
      animation: rotate 0.8s linear infinite;
    }
    
    @keyframes rotate {
      to {
        transform: translate(-50%, -50%) rotate(360deg);
      }
    }

    .divider {
      text-align: center;
      margin: 1.5rem 0;
      position: relative;
      color: #666;
      font-size: 0.9rem;
      animation: fadeIn 0.6s ease-out 1.8s both;
    }

    .divider span {
      display: inline-block;
      padding: 0 1rem;
      background: #fff;
      position: relative;
      z-index: 1;
    }

    .divider::before {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      top: 50%;
      height: 1px;
      background: #E0E0E0;
      z-index: 0;
    }

    .social-login {
      display: flex;
      gap: 1rem;
      margin-top: 0.5rem;
      animation: slideUp 0.6s ease-out 2s both;
    }

    .social-btn {
      flex: 1;
      padding: 10px;
      border: 1px solid #E0E0E0;
      border-radius: 8px;
      background: #fff;
      color: #1A1A1A;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      text-decoration: none;
      transform-origin: center;
    }

    .social-btn:hover {
      background: #F8F9FA;
      transform: scale(1.05);
    }

    .social-btn i {
      font-size: 1.1rem;
    }

    .fa-google {
      color: #DB4437;
    }

    .fa-facebook-f {
      color: #4267B2;
    }

    .register-link {
      text-align: center;
      margin-top: 1.5rem;
      font-size: 0.95rem;
      color: #666;
      animation: fadeIn 0.6s ease-out 2.2s both;
    }

    .register-link a {
      color: #1A1A1A;
      text-decoration: none;
      font-weight: 500;
      margin-left: 0.25rem;
      transition: color 0.3s ease;
    }

    .register-link a:hover {
      color: #333;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Loader Styles */
    .loader-wrapper {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      transition: opacity 0.5s, visibility 0.5s;
    }

    .loader-wrapper.fade-out {
      opacity: 0;
      visibility: hidden;
    }

    .loader {
      width: 40px;
      height: 40px;
      position: relative;
      animation: loaderScale 0.5s ease-out;
    }

    .loader:before,
    .loader:after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: #4B5563;
      opacity: 0.6;
      animation: pulse 2s ease-in-out infinite;
    }

    .loader:after {
      animation-delay: -1s;
    }

    @keyframes pulse {
      0% {
        transform: scale(0);
        opacity: 1;
      }
      100% {
        transform: scale(1.5);
        opacity: 0;
      }
    }

    @keyframes loaderScale {
      from { transform: scale(0); }
      to { transform: scale(1); }
    }

    .error-message {
      color: #dc3545;
      font-size: 0.8rem;
      margin-top: 0.25rem;
      display: block;
    }

    .is-invalid {
      border-color: #dc3545 !important;
    }

    .is-invalid:focus {
      box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.1) !important;
    }

    .alert {
      padding: 0.875rem 1rem;
      margin-bottom: 1rem;
      border-radius: 8px;
      font-size: 0.95rem;
      animation: slideDown 0.6s ease-out both;
    }

    .alert-danger {
      background-color: #fff5f5;
      color: #dc3545;
      border: 1px solid #ffebeb;
    }

    @media (max-width: 1200px) {
      .container {
        width: 95%;
        gap: 2rem;
        padding: 1.5rem;
      }

      .left-section {
        padding: 2.5rem;
        height: 600px;
      }

      .login-card {
        padding: 3rem;
        margin-left: 5%;
      }

      .video-text-overlay h1 {
        font-size: 2.8rem;
      }

      .video-text-overlay h1 span {
        font-size: 1.6rem;
      }

      .right-section {
        height: 600px;
      }
    }

    @media (max-width: 992px) {
      .container {
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        padding: 2rem 1rem;
      }

      .left-section {
        width: 100%;
        max-width: 600px;
        height: 300px;
        padding: 2rem;
        border-radius: 25px;
      }

      .video-container {
        border-radius: 25px;
      }

      .right-section {
        width: 100%;
        max-width: 600px;
        height: auto;
        padding: 0;
        margin: 0;
      }

      .login-card {
        margin: 0;
        padding: 2.5rem;
        max-width: 100%;
        height: auto;
        border-radius: 25px;
      }

      .video-text-overlay {
        bottom: 50%;
        transform: translate(-50%, 50%);
      }

      .video-text-overlay h1 {
        font-size: 2.4rem;
      }

      .video-text-overlay h1 span {
        font-size: 1.4rem;
      }

      .login-header h2 {
        font-size: 1.6rem;
      }

      .form-group {
        margin-bottom: 1.5rem;
      }
    }

    @media (max-width: 576px) {
      .container {
        width: 100%;
        padding: 1rem;
        margin: 0;
        min-height: 100vh;
        justify-content: flex-start;
      }

      .left-section {
        height: 220px;
        border-radius: 20px;
        margin-top: 0.5rem;
        padding: 1.5rem;
      }

      .video-container {
        border-radius: 20px;
      }

      .login-card {
        padding: 1.5rem;
        border-radius: 20px;
      }

      .video-text-overlay h1 {
        font-size: 2rem;
      }

      .video-text-overlay h1 span {
        font-size: 1.2rem;
      }

      .login-header {
        margin-bottom: 1.5rem;
      }

      .login-header h2 {
        font-size: 1.4rem;
      }

      .login-header p {
        font-size: 0.9rem;
      }

      .form-group {
        margin-bottom: 1.25rem;
      }

      .form-group label {
        font-size: 0.9rem;
        margin-bottom: 0.4rem;
      }

      .form-group input {
        padding: 0.875rem 1rem;
        font-size: 0.95rem;
        border-radius: 12px;
      }

      .password-toggle {
        top: 50%;
        transform: translateY(-50%);
        right: 1rem;
      }

      .submit-btn {
        padding: 0.875rem;
        font-size: 1rem;
        border-radius: 12px;
      }

      .social-login {
        margin-top: 1.5rem;
      }

      .social-btn {
        padding: 0.75rem;
        font-size: 0.95rem;
        border-radius: 12px;
      }

      .login-link {
        margin-top: 1.5rem;
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <div class="loader-wrapper">
    <div class="loader"></div>
  </div>
  
  <div class="container">
    <div class="left-section">
      <div class="video-container">
        <video class="background-video" autoplay loop muted playsinline>
          <source src="../shuttercart-imags/01-H13-CE-carousel-1280x700-v2.mp4" type="video/mp4">
        </video>
      </div>
      <div class="video-text-overlay">
        <h1>Welcome to ShutterCart<span>Your Ultimate Photography Destination</span></h1>
      </div>
    </div>

    <div class="right-section">
      <div class="login-card">
        <div class="login-header">
          <h2>Create Account</h2>
          <p>Sign up to get started</p>
        </div>

        <form id="form" method="post" action="/signup">
          <% if(locals.message && message.length>0){ %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
          <% } %>

          <div class="form-group">
            <label for="username">Full Name</label>
            <input type="text" id="username" name="name" placeholder="Enter your full name">
            <small class="error-message"></small>
          </div>

          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter your email">
            <small class="error-message"></small>
          </div>

          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your phone number">
            <small class="error-message"></small>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Create a password">
            <small class="error-message"></small>
          </div>

          <div class="form-group">
            <label for="cpassword">Confirm Password</label>
            <input type="password" id="cpassword" name="cpassword" placeholder="Confirm your password">
            <small class="error-message"></small>
          </div>

          <div class="remember-me">
            <input type="checkbox" id="terms" name="terms">
            <label for="terms">I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
          </div>

          <button type="submit" class="btn-login" id="submitBtn">Create Account</button>
        </form>

        <div class="divider">
          <span>or continue with</span>
        </div>

        <div class="social-login">
          <a href="/auth/google" class="social-btn">
            <i class="fab fa-google"></i>
            <span>Google</span>
          </a>
          <a href="#" target="_blank" class="social-btn">
            <i class="fab fa-facebook-f"></i>
            <span>Facebook</span>
          </a>
        </div>

        <div class="register-link">
          Already have an account? <a href="/login">Log In</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Loader handling
    window.addEventListener('load', function() {
      const loader = document.querySelector('.loader-wrapper');
      loader.classList.add('fade-out');
      setTimeout(() => {
        loader.style.display = 'none';
      }, 500);
    });

    // Form validation
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('form');
      const nameInput = document.getElementById('username');
      const emailInput = document.getElementById('email');
      const phoneInput = document.getElementById('phone');
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('cpassword');
  
      function showError(input, message) {
        const errorElement = input.parentElement.querySelector('.error-message');
        if (errorElement) {
          errorElement.textContent = message;
          input.classList.add('is-invalid');
        }
      }

      function clearError(input) {
        const errorElement = input.parentElement.querySelector('.error-message');
        if (errorElement) {
          errorElement.textContent = '';
          input.classList.remove('is-invalid');
        }
      }

      function validateName() {
        const name = nameInput.value.trim();
        if (name === '') {
          showError(nameInput, 'Name is required');
          return false;
        }
        if (name.length < 2) {
          showError(nameInput, 'Name must be at least 2 characters');
          return false;
        }
        clearError(nameInput);
        return true;
      }

      function validateEmail() {
        const email = emailInput.value.trim();
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (email === '') {
          showError(emailInput, 'Email is required');
          return false;
        }
        if (!emailRegex.test(email)) {
          showError(emailInput, 'Please enter a valid email');
          return false;
        }
        clearError(emailInput);
        return true;
      }

      function validatePhone() {
        const phone = phoneInput.value.trim();
        const phoneRegex = /^[0-9]{10}$/;
        if (phone === '') {
          showError(phoneInput, 'Phone number is required');
          return false;
        }
        if (!phoneRegex.test(phone)) {
          showError(phoneInput, 'Please enter a valid 10-digit number');
          return false;
        }
        clearError(phoneInput);
        return true;
      }

      function validatePassword() {
        const password = passwordInput.value;
        const passwordRegex = /^(?=.*[a-zA-Z])(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{6,}$/;
        if (password === '') {
          showError(passwordInput, 'Password is required');
          return false;
        }
        if (password.length < 6) {
          showError(passwordInput, 'Password must be at least 6 characters');
          return false;
        }
        if (!passwordRegex.test(password)) {
          showError(passwordInput, 'Password must contain at least one letter , one number, and one special character');
          return false;
        }
        clearError(passwordInput);
        return true;
      }

      function validateConfirmPassword() {
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;
        if (confirmPassword === '') {
          showError(confirmPasswordInput, 'Please confirm your password');
          return false;
        }
        if (password !== confirmPassword) {
          showError(confirmPasswordInput, 'Passwords do not match');
          return false;
        }
        clearError(confirmPasswordInput);
        return true;
      }

      // Real-time validation
      nameInput.addEventListener('input', validateName);
      emailInput.addEventListener('input', validateEmail);
      phoneInput.addEventListener('input', validatePhone);
      passwordInput.addEventListener('input', validatePassword);
      confirmPasswordInput.addEventListener('input', validateConfirmPassword);

      // Form submission
      form.addEventListener('submit', function(event) {
        event.preventDefault();

        // Reset previous errors
        document.querySelectorAll('.error-message').forEach(el => el.textContent = '');
        document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));

        const isNameValid = validateName();
        const isEmailValid = validateEmail();
        const isPhoneValid = validatePhone();
        const isPasswordValid = validatePassword();
        const isConfirmPasswordValid = validateConfirmPassword();

        if (isNameValid && isEmailValid && isPhoneValid && 
            isPasswordValid && isConfirmPasswordValid) {
          const submitBtn = document.getElementById('submitBtn');
          submitBtn.classList.add('loading');
          submitBtn.disabled = true;
          form.submit();
        }
      });
    });
  </script>
</body>
</html>