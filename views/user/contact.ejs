<%- include('../partials/user/header') %>

<!-- Hero Section -->
<div class="contact-hero position-relative">
    <img src="https://images.unsplash.com/photo-1542435503-956c469947f6?auto=format&fit=crop&w=2000&q=80" alt="Contact Hero" class="w-100 hero-image">
    <div class="hero-overlay"></div>
    <div class="container position-relative">
        <div class="hero-content text-center py-5">
            <h1 class="text-white mb-3">Get in Touch</h1>
            <p class="text-white mb-0">We'd love to hear from you. Let's create something amazing together.</p>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Contact Information -->
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="contact-info bg-white p-4 rounded shadow-sm">
                <div class="text-center mb-4">
                    <img src="https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?auto=format&fit=crop&w=500&q=80" alt="Contact" class="rounded-circle contact-image mb-3">
                </div>
                <h3 class="mb-4 text-center">Contact Information</h3>
                <div class="d-flex mb-3">
                    <i class="fas fa-map-marker-alt text-dark me-3 fs-4"></i>
                    <div>
                        <h5 class="mb-1">Address</h5>
                        <p class="mb-0">123 ShutterCart Street, Photography Lane<br>New York, NY 10001</p>
                    </div>
                </div>
                <div class="d-flex mb-3">
                    <i class="fas fa-phone text-dark me-3 fs-4"></i>
                    <div>
                        <h5 class="mb-1">Phone</h5>
                        <p class="mb-0">+1 (555) 123-4567</p>
                    </div>
                </div>
                <div class="d-flex mb-3">
                    <i class="fas fa-envelope text-dark me-3 fs-4"></i>
                    <div>
                        <h5 class="mb-1">Email</h5>
                        <p class="mb-0">contact@shuttercart.com</p>
                    </div>
                </div>
                <div class="social-links mt-4 text-center">
                    <a href="#" class="me-3 text-dark"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="me-3 text-dark"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="me-3 text-dark"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-dark"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
        
        <!-- Contact Form -->
        <div class="col-md-8">
            <div class="bg-white p-4 rounded shadow-sm">
                <div class="row align-items-center mb-4">
                    <div class="col-md-6">
                        <h3 class="mb-0">Send us a Message</h3>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <img src="https://images.unsplash.com/photo-1512626120412-faf41adb4874?auto=format&fit=crop&w=200&q=80" alt="Camera" class="rounded form-image">
                    </div>
                </div>
                <form action="/contact" method="POST">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control custom-input" id="name" name="name" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control custom-input" id="email" name="email" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control custom-input" id="subject" name="subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control custom-input" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero Section */
    .contact-hero {
        height: 300px;
        overflow: hidden;
    }
    .hero-image {
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%);
    }
    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.6);
    }
    .hero-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
    }

    /* Contact Info Section */
    .contact-info {
        height: 100%;
        border: 1px solid #e0e0e0;
    }
    .contact-image {
        width: 120px;
        height: 120px;
        object-fit: cover;
        filter: grayscale(100%);
    }
    .form-image {
        max-width: 100px;
        filter: grayscale(100%);
    }

    /* Form Styling */
    .custom-input {
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }
    .custom-input:focus {
        border-color: #000;
        box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.1);
    }
    
    /* Social Links */
    .social-links a {
        font-size: 1.2rem;
        transition: color 0.3s;
    }
    .social-links a:hover {
        color: #666 !important;
    }
    
    /* Button Styling */
    .btn-dark {
        padding: 0.5rem 2rem;
        transition: all 0.3s ease;
    }
    .btn-dark:hover {
        background-color: #333;
    }

    @media (max-width: 768px) {
        .contact-hero {
            height: 200px;
        }
        .form-image {
            max-width: 80px;
            margin-top: 1rem;
        }
    }
</style>

<%- include('../partials/user/footer') %>
