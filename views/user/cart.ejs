 <%- include('../partials/user/header') %>

    <section class="section-b-space pt-0"> 
      <div class="heading-banner">
        <div class="custom-container container">
          <div class="row align-items-center">
            <div class="col-sm-6">
              <h4>Cart</h4>
            </div>
            <div class="col-sm-6">
              <ul class="breadcrumb float-end">
                <li class="breadcrumb-item"> <a class="text-decoration-none text-black" href="/">Home </a></li>
                <li class="breadcrumb-item active"> <a class="text-decoration-none text-black" href="#">Cart</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="section-b-space pt-0" >
      <% if(cartItems && cartItems.length >0 ){ %>
      <div class="custom-container container" id="sec-body"> 
        <div class="row g-4">
          

          <div class="col-xxl-9 col-xl-8">
            <div class="cart-table">
              <div class="cart-header d-flex justify-content-between align-items-center mb-4">
                <h5>Shopping Cart (<%= countItems %> Items)</h5>
                <% if (cartItems && cartItems.length > 0) { %>
                  <button class="btn btn-outline-danger d-flex align-items-center gap-2" onclick="clearCart()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                      <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                    </svg>
                    <b> Clear All</b>
                  </button>
                <% } %>
              </div>
             
              <div class="table-responsive theme-scrollbar"> 
                <table class="table" id="cart-table">
                  <thead>
                    <tr> 
                      <th>Product </th>
                      <th>Price </th>
                       <th>Quantity</th>
                      <th>Total</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody id="tbody"> 
                    <% cartItems.forEach((item)=>{ %>
                      <tr id="row<%= item.productId._id %>" data-price="<%= item.productId.salePrice %>">
                        <td> 
                        <div class="cart-box"> <a href="/productDetails?id=<%= item.productId._id %>"> <img src="<%= item.productId.productImage[0] %>" alt=""></a>
                          <div> <a class="text-decoration-none text-black" href="/productDetails?id=<%= item.productId._id %>">
                              <h5 > <%= item.productId.productName %></h5></a>
                            <!-- <p>Sold By: <span>Roger Group </span></p>
                            <p>Size: <span>Small</span></p> -->
                          </div>
                        </div>
                      </td>
                      
                          <td id="salePrice<%=item.productId._id %>"><%= item.productId.salePrice %>
                            <% if (item.bestOffer > 0) { %>
                              <span class="offer-badge text-success">-<%= item.bestOffer %>% OFF</span>
                           <% } %>
                           
                      </td>
                      <td>
                        <div class="quantity">
                          <button class=" " onclick="checkQuantity( '<%=item.productId._id %>' ,-1)" type="button">-</button>
                          <input type="number" value="<%= item.quantity %>" min="1" max="6" id="quantity<%=item.productId._id %>" readonly>
                          <button class=" " onclick="checkQuantity( '<%=item.productId._id %>',1 )" type="button">+</button>
                        </div>
                      </td>
                      <td id="totalprice<%=item.productId._id %>" data-price="<%=item.productId.salePrice%>"><%=item.productId.salePrice*item.quantity %></td>
                      <td><a class="deleteButton" onclick="dltCartItem('<%=item.productId._id %>')" href="javascript:void(0)"><i class="iconsax" data-icon="trash"></i></a></td>
                    </tr>
                    <% }) %>
                      
                        
                  </tbody>
                </table>
                  
              </div>
           
            </div>
          </div>
          <div class="col-xxl-3 col-xl-4">
            <div class="cart-items">      
              <div class="cart-progress">
                <div class="progress">
                  <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 43%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"><span> <i class="iconsax" data-icon="truck-fast"></i></span></div>
                </div>
               </div>
              <div class="cart-body"> 
                <h6>Price Details (<%= countItems %> Items) </h6>
                <ul> 
                  <li> 
                    <p>Subtotal </p><span class="text-black" id="subtotal">  ₹<%= cartSubtotal %></span>
                  </li>
                  <li> 
                    <p>Discount </p><span id="discount" class="theme-color"> ₹<%= discount.toFixed(2) %></span>
                  </li>
                  <li> 
                    <!-- <p>Coupon Discount </p><span class="Coupon">Apply Coupon </span> -->
                  </li>
                  <li> 
                    <p>Shipping </p><span class="text-green">Free</span>
                  </li>
                </ul>
              </div>
              
              <div class="cart-bottom"> 
                <!-- <p><i class="iconsax me-1" data-icon="tag-2"></i>SPECIAL OFFER (-$1.49) </p> -->
                <h6 class="pb-4">Total Amount <span class="text-black"  id="finamount"> ₹<%= totalAmount.toFixed(2) %></span></h6>
                <!-- <span>Taxes and shipping calculated at checkout</span> -->
              </div>
              <a class="btn btn_black w-100 rounded sm" href="/checkout" id="checkOutBtn"  >Check Out</a>
            </div>
          </div>
          
        </div>
      </div>
    </section> 
    <% }else{ %>
    <div class="cart-page">
        <div class="container">
               <div class="empty-cart-container">
                <div class="empty-cart-content">
                    <img src="/assets/images/cart/empty-cart.png" alt="Empty Cart" class="empty-cart-icon">
                    <h2>Your Shopping Cart Is Empty!</h2>
                    <p>Looks like you haven't added anything to your cart yet.</p>
                    <a href="/shop" class="continue-shopping-btn">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <style>
        .cart-page {
            min-height: 80vh;
            padding: 40px 0;
            background-color: #fff;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .cart-title {
            font-size: 28px;
            font-weight: 500;
            margin-bottom: 30px;
            color: #333;
            text-align: center;
        }

        .empty-cart-container {
            background: white;
            border-radius: 12px;
            padding: 60px 20px;
            text-align: center;
            margin: 20px 0;
        }

        .empty-cart-content {
            max-width: 400px;
            margin: 0 auto;
        }

        .empty-cart-icon {
            width: 180px;
            height: auto;
            margin-bottom: 25px;
        }

        .empty-cart-content h2 {
            font-size: 24px;
            color: #333;
            margin-bottom: 12px;
            font-weight: 500;
        }

        .empty-cart-content p {
            color: #666;
            margin-bottom: 25px;
            font-size: 15px;
        }

        .continue-shopping-btn {
            display: inline-block;
            padding: 12px 32px;
            background-color: #000;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s ease;
            font-size: 15px;
        }

        .continue-shopping-btn:hover {
            background-color: #333;
            transform: translateY(-2px);
        }
    </style>


    <script>
      

      async function checkQuantity(productId,num) {
        try {
          
           const response = await fetch('/cart/add',{
            method:'POST',
            headers:{
              'Content-Type': 'application/json'
            },body:JSON.stringify({productId,quantity:num}),
              })
    
          const data = await response.json()
           if(!response.ok){
             Toastify({
                    text: data.message || "Error adding to cart",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#dc3545", // Error color (red)
                    stopOnFocus: true,
                    style: {
                  color: "#ffffff", // Text color
                fontSize: "16px", // Optional: Adjust font size
                borderRadius:'20px'
                },
                }).showToast();
            }else{
              let quantity= document.getElementById(`quantity${productId}`).value ;
              const  finalAmount = document.getElementById('finamount')
              const totalprice = document.querySelector(`#row${productId} #totalprice${productId}`)
              const originalPrice = totalprice.getAttribute('data-price')
              const discount = document.getElementById('discount')
              let quantityInput =  document.getElementById( `quantity${productId}`) 
              quantityInput.value=data.quantity.quantity
               if(data.subtotal && data.subtotal > 0) {
                // Clean and convert the values
                const cleanQuantity = Number(quantity)
                const cleanPrice = Number(originalPrice)
                
                console.log('Clean values - quantity:', cleanQuantity, 'price:', cleanPrice)
                
                const itemTotal = cleanQuantity * cleanPrice
                
                subtotal.innerHTML = data.subtotal
                discount.innerHTML = data.discount.toFixed(2)
                finalAmount.innerHTML = (data.subtotal - data.discount)
                totalprice.innerHTML = itemTotal
                
                console.log('Final total:', itemTotal)
              }
              }

             
            }
        catch (error) {
            console.error("Error:", error);
            Toastify({
                text: "Something went wrong. Please try again.",
                duration: 3000,
                close: true,
                gravity: "top",
                position: "right",
                backgroundColor: "#dc3545",
                stopOnFocus: true,
                style: {
                  color: "#ffffff", // Text color
                fontSize: "16px", // Optional: Adjust font size
                borderRadius:'20px'
                },
            }).showToast();
        }
    }
    </script>


<script>
  async function dltCartItem(productId) {
    try {

      const result = await Swal.fire({
            title: 'Are you sure?',
            text: "Do you really want to remove this item from the cart?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#dc3545',
            confirmButtonText: 'Yes, remove it!',
            cancelButtonText: 'Cancel',
            background: '#2D2D2D', // Dark background for the alert
            textColor: '#fff', // White text color
            focusConfirm: false,
            focusCancel: false
        });

        // If the user confirms, proceed with deletion
        if (result.isConfirmed) {
       const response = await fetch(`/cart/remove`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId })
      });

      const data = await response.json();

      if (response.ok) {
         const productRow = document.querySelector(`#row${productId}`);
        if (productRow) {
          productRow.remove();
        }

         Toastify({
          text: data.message || "Item removed from the cart successfully",
          duration: 3000,
          close: true,
          gravity: "top",
          position: "right",
          backgroundColor: "#28a745",  
          stopOnFocus: true,
          style: {
            color: "#ffffff",  
            fontSize: "16px"  ,
            borderRadius:'20px'
          }
        }).showToast();
      
        window.location.reload();
         const tbody= document.getElementById('tbody')
         console.log(data);
         
         if(data.cart.items.length <1){
          tbody.innerHTML=` <td colspan="6"> <div class="cart-page">
          <h5> Your cart is empty!</h5>
          </div></td>`  
         }
       } else {
         Toastify({
          text: data.message || "Failed to remove the item from the cart",
          duration: 3000,
          close: true,
          gravity: "top",
          position: "right",
          backgroundColor: "#dc3545",  
          stopOnFocus: true,
          style: {
            color: "#ffffff",  
            fontSize: "16px" ,
            borderRadius:'20px'
          }
        }).showToast();
      }
    }
    } catch (error) {
      console.error("Error:", error);
       Toastify({
        text: "Something went wrong. Please try again.",
        duration: 3000,
        close: true,
        gravity: "top",
        position: "right",
        backgroundColor: "#dc3545",
        stopOnFocus: true,
        style: {
          color: "#ffffff",  
          fontSize: "16px"   ,
          borderRadius:'20px'
        }
      }).showToast();
    }
  }
  
</script>

<script>
  async function clearCart() {
    try {
      const result = await Swal.fire({
        title: 'Clear Cart?',
        text: "Are you sure you want to remove all items from your cart?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc3545',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Yes, clear cart',
        cancelButtonText: 'Cancel'
        
      });

      if (result.isConfirmed) {
        const response = await fetch('/cart/clear', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const data = await response.json();

        if (response.ok) {
          // Show success message
          Toastify({
            text: "Cart cleared successfully",
            duration: 3000,
            close: true,
            gravity: "top",
            position: "right",
            backgroundColor: "#28a745",
            stopOnFocus: true,
            style: {
              color: "#ffffff",
              fontSize: "16px",
              borderRadius:'20px'
            }
          }).showToast();

          // Update the cart display
          const tbody = document.getElementById('sec-body');
          if (tbody) {
            tbody.innerHTML = `
               <div class="cart-page">
        <div class="container">
               <div class="empty-cart-container">
                <div class="empty-cart-content">
                    <img src="/assets/images/cart/empty-cart.png" alt="Empty Cart" class="empty-cart-icon">
                    <h2>Your Shopping Cart Is Empty!</h2>
                    <p>Looks like you haven't added anything to your cart yet.</p>
                    <a href="/shop" class="continue-shopping-btn">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
            `;
          }

          // Update cart summary
          const subtotal = document.getElementById('subtotal');
          const discount = document.getElementById('discount');
          const finalAmount = document.getElementById('finamount');

          if (subtotal) subtotal.innerHTML = '0.00';
          if (discount) discount.innerHTML = '-0.00';
          if (finalAmount) finalAmount.innerHTML = '0.00';

          // Update cart count in header
          const cartCount = document.querySelector('.cart-count');
          if (cartCount) cartCount.textContent = '0';

          // Hide price details section
          const priceDetails = document.querySelector('.price-details');
          if (priceDetails) {
            priceDetails.style.display = 'none';
          }

          // Hide clear all button
          const clearAllBtn = document.querySelector('[onclick="clearCart()"]');
          if (clearAllBtn) {
            clearAllBtn.style.display = 'none';
          }

        } else {
          Toastify({
            text: data.message || "Failed to clear cart",
            duration: 3000,
            close: true,
            gravity: "top",
            position: "right",
            backgroundColor: "#dc3545",
            stopOnFocus: true,
            style: {
              color: "#ffffff",
              fontSize: "16px",
              borderRadius:'20px'
            }
          }).showToast();
        }
      }
    } catch (error) {
      console.error("Error:", error);
      Toastify({
        text: "Something went wrong. Please try again.",
        duration: 3000,
        close: true,
        gravity: "top",
        position: "right",
        backgroundColor: "#dc3545",
        stopOnFocus: true,
        style: {
          color: "#ffffff",
          fontSize: "16px",
          borderRadius:'20px'
        }
      }).showToast();
    }
  }
</script>
