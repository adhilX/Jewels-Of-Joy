<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Content rotation arrays with styles
        const content = [
            {
                title: "Capture Your Moments",
                subtitle: "Welcome to ShutterCart",
                description: "Discover premium camera gear for every photographer. Quality equipment for unforgettable memories.",
                button: "Shop Now",
                styles: {
                    color: "#ffffff",
                    buttonClass: "btn-outline-light"
                }
            },
            {
                title: "Professional Photography Gear",
                subtitle: "Expert Choice",
                description: "Industry-leading cameras and equipment trusted by professional photographers worldwide.",
                button: "View Collection",
                styles: {
                    color: "#ffd700",
                    buttonClass: "btn-warning"
                }
            }
        ];

        let currentIndex = 0;
        const elements = {
            title: document.getElementById('changing-title'),
            subtitle: document.getElementById('changing-subtitle'),
            description: document.getElementById('changing-description'),
            button: document.getElementById('changing-button')
        };

        // Initial animation trigger
        setTimeout(() => {
            document.querySelectorAll('.initial-animation').forEach((el, index) => {
                setTimeout(() => {
                    el.classList.add('animate-in');
                }, index * 400);
            });
        }, 500);

        // Function to animate content change
        function changeContent() {
            // Fade out all elements
            Object.values(elements).forEach(el => {
                el.classList.add('fade-out');
            });

            setTimeout(() => {
                // Update content
                currentIndex = (currentIndex + 1) % content.length;
                const newContent = content[currentIndex];

                // Update text content and styles
                elements.title.textContent = newContent.title;
                elements.title.style.color = newContent.styles.color;
                
                elements.subtitle.textContent = newContent.subtitle;
                elements.subtitle.style.color = newContent.styles.color;
                
                elements.description.textContent = newContent.description;
                elements.description.style.color = currentIndex === 0 ? '#ffffff' : '#fff8dc';
                
                elements.button.textContent = newContent.button;
                elements.button.className = `btn ${newContent.styles.buttonClass} px-4 py-2 rounded-pill text-uppercase shop-now-btn`;

                // Trigger new animations
                Object.values(elements).forEach(el => {
                    el.classList.remove('fade-out');
                    el.classList.add('fade-in');
                });

                // Remove animation classes after animation completes
                setTimeout(() => {
                    Object.values(elements).forEach(el => {
                        el.classList.remove('fade-in');
                    });
                }, 1000);
            }, 600);
        }

        // Start content rotation after initial animations
        setTimeout(() => {
            setInterval(changeContent, 5000);
        }, 3000);
    });
</script>

