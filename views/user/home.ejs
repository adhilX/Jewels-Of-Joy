    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="mb-0">Special Products</h2>
      </div>
      <div class="col-auto">
        <ul class="nav nav-pills" id="specialProductsTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#new-arrivals" type="button">New Arrivals</button>
          </li>
          <li class="nav-item" role="presentation">
            <!-- <button class="nav-link" data-bs-toggle="pill" data-bs-target="#best-sellers" type="button">Best Sellers</button> -->
          </li>
        </ul>
      </div>
    </div>
    <div class="tab-content" id="specialProductsContent">
      <div class="tab-pane fade show active" id="new-arrivals" role="tabpanel">
        <div class="row g-4">
          <% products.forEach(product => { %>
            <div class="col-lg-3 col-md-4 col-6">
              <div class="product-card h-100 rounded-4 overflow-hidden bg-white shadow-sm">
                <div class="product-image position-relative">
                  <div class="badge bg-danger position-absolute top-0 start-0 m-3">NEW</div>
                  <a href="/productDetails?id=<%= product._id %>">
                    <img src="<%= product.productImage[0] %>" class="w-100 object-fit-cover primary-img" alt="<%= product.productName %>" style="height: 280px;">
                    <% if(product.productImage[1]) { %>
                      <img src="<%= product.productImage[1] %>" class="w-100 object-fit-cover secondary-img" alt="<%= product.productName %>" style="height: 280px;">
                    <% } %>
                  </a>
                  <div class="product-actions position-absolute bottom-0 start-0 w-100 p-3 bg-white bg-opacity-75">
                    <div class="d-flex justify-content-around">
                      <!-- <a href="/productDetails?id=<%= product._id %>" class="text-dark" data-bs-toggle="tooltip" title="Add to Cart">
                        <i class="fas fa-shopping-cart"></i>
                      </a>
                      <a href="/productDetails?id=<%= product._id %>" class="text-dark" data-bs-toggle="tooltip" title="Add to Wishlist">
                        <i class="fas fa-heart"></i>
                      </a> -->
                      <a href="/productDetails?id=<%= product._id %>" class="text-dark" data-bs-toggle="tooltip" title="View Details">
                        <i class="fas fa-eye"></i>
                      </a>
                    </div>
                  </div>
                </div>
                <div class="product-info p-3">
                  <h5 class="product-title mb-2">
                    <a href="/productDetails?id=<%= product._id %>" class="text-dark text-decoration-none">
                      <%= product.productName %>
                    </a>
                  </h5>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="price-box">
                      <span class="current-price fw-bold"> ₹<%= product.salePrice %></span>
                      <% if(product.regularPrice > product.salePrice) { %>
                        <span class="old-price text-muted text-decoration-line-through ms-2"> ₹<%= product.regularPrice %></span>
                        <span class="discount badge bg-success ms-2">
                          <%= Math.round((product.regularPrice - product.salePrice) / product.regularPrice * 100) %>% OFF
                        </span>
                      <% } %>
                    </div>
                  </div>
                  <div class="rating mt-2">
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star-half-alt text-warning"></i>
                    <span class="text-muted ms-2">(4.5)</span>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      <div class="tab-pane fade" id="best-sellers" role="tabpanel">
        <div class="row g-4">
          <!-- Product cards will be dynamically loaded here -->
        </div>
      </div>
    </div>
